if ($request_method = 'GET') {
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Headers' 'Access-Control-Allow-Origin,Access-Control-Allow-Credentials,Access-Control-Allow-Methods,Access-Control-Max-Age,Origin,X-Requested-With,Content-Type,Accept,Authorization,X-Locale,Content-Type';

		add_header 'Last-Modified' 'common.UTCNow()' always;
		add_header 'X-Robots-Tag' 'noindex' always;

        add_header 'Access-Control-Allow-Methods' 'GET,OPTIONS' always;
        add_header 'Access-Control-Max-Age' 1728000 always;
        add_header 'Content-Type' 'text/plain charset=UTF-8' always;
        add_header 'Content-Length' 0 always;
}


if ($request_method = 'OPTIONS') {
        add_header 'Access-Control-Allow-Methods' 'GET' always;
        return 200;
}